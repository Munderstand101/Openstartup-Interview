{% extends 'base.html.twig' %}

{% block title %}Groupes{% endblock %}

{% block body %}
    {{ parent() }}

    <section class="home-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card main text-center">
                        <div class="card-header main">
                            {{ include("Components/navbar.html.twig") }}
                        </div>

                        <div class="card-body">
                            <h1>Groupes</h1>

                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ groupe.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ groupe.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Membres</th>
                                    <td>[
                                    {% for user in groupe.users %}
                                        {{ user.nom }}{% if not loop.last %},{% endif %}
                                    {% endfor %} ]
                                    </td>
                                </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('groupes_index') }}">back to list</a>

                            <a href="{{ path('groupes_edit', {'id': groupe.id}) }}">edit</a>

                            {{ include('groupes/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
    </section>
{% endblock %}
